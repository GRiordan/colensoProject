extends ../node_modules/jade-bootstrap/_bootstrap

block body

    nav.navbar.navbar-fixed-top.navbar-default(role='navigation')
        .container-fluid
            .navbar-header
                button.navbar-toggle(type='button', data-toggle='collapse', data-target='#navbar')
                    span.icon-bar
                    span.icon-bar
                    span.icon-bar
                a.navbar-brand(href='/') Colenso Project
            #navbar.collapse.navbar-collapse
                ul.nav.navbar-nav
                    li.active
                        a(href='/') Home
                    li
                        a(href='/list') File Explorer
                    li
                        a(href='/addDoc') Add Document
                    li
                        form.navbar-form.navbar-left(action='search', method='get')
                            .form-group
                                .input-group
                                    input.form-control(type='text', placeholder='Search...', name='searchString')
                                    .input-group-btn
                                        .btn-group
                                            button.btn.btn-default(type='submit') Search
                                            button.btn.btn-default.dropdown-toggle(type='button', data-toggle='dropdown')
                                                span.caret
                                            ul.dropdown-menu
                                                li
                                                    label
                                                        input(type='radio', name='gridRadios', value='option1', checked='true')
                                                        | Search by text
                                                li
                                                    label
                                                        input(type='radio', name='gridRadios', value='option2')
                                                        | Search by xquery

    .container(style="padding-top: 70px")
        //.page-header
            h2(style="font-family: 'Calibri', 'Trebuchet MS', sans-serif;")=title
        .header.clearfix.page-header
            nav
                ul.nav.nav-pills.pull-right
                    li.active(role='presentation')
                        a(href='/') Home
                    li(role='presentation')
                        a(href='/list') File Explorer
                    li(role='presentation')
                        a(href='addDoc') Add Document
            h2(style="font-family: 'Calibri', 'Trebuchet MS', sans-serif;")=title
    .container
        //p add radio button either search by text or markup
        //form(action="search", method="get")
            input(type="text", name="searchString")
            input(type="submit")
        br
    .container
        .jumbotron
            form(action="search", method="get")
                .form-group.row
                    label.col-sm-2.form-control-label(for='searchBar') Search
                    .col-sm-10
                        input#searchBar.form-control(type='text', name='searchString' ,placeholder='search...')
                .form-group.row
                    .col-sm-10
                        .radio
                            label
                                input#gridRadios1(type='radio', name='gridRadios', value='option1', checked='')
                                |           Search by Text
                        .radio
                            label
                                input#gridRadios2(type='radio', name='gridRadios', value='option2')
                                |           Search by XQuery
                .form-group.row
                    .col-sm-offset-2.col-sm-10
                        button.btn.btn-secondary(type='submit') Search
