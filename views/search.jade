extends ../node_modules/jade-bootstrap/_bootstrap

block body
    +navbar("Colenso Project", "dropdown_menu")
        +nav_item("/") Home
        +nav_item("/list") File Explorer
    .container
        h3(style="font-family: 'Calibri', 'Trebuchet MS', sans-serif;") Search Results
        if searchType == "option1"
            p
                | Searching by text
        else if searchType == "option2"
            p
                | searching by XQuery
        p You searched for #{search}
        -var list = searchResult.split("\n");
        ul
            each listItem in list
                li #{listItem}
        //p #{searchResult}
